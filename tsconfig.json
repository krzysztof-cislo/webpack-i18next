{
  "compilerOptions": {
    "lib": ["ES2020", "dom"],
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "jsx": "react",
    "outDir": "./build",
    "baseUrl": "./src",
    "strictNullChecks": false,
    "incremental": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
  },
  "exclude": ["./node_modules"]
}
